WindowManager:
    DueDateWindow:
    TypeOfHomeworkWindow:
        id: TypeOfHomeworkWindow
    EssayHomeworkWindow:
    OpenEndedHomeworkWindow:
    ScheduleWindow:

<DueDateWindow>
    name: "DueDateWindow"

    homeworkDueDate:homeworkDueDate

    BoxLayout:
        cols: 1
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "When is the homework due(yy/mm/dd)?"

        TextInput:
            id: homeworkDueDate
            multiline: False

        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            on_release: app.root.current = "TypeOfHomeworkWindow"



<TypeOfHomeworkWindow>
    name: "TypeOfHomeworkWindow"
    homeworkType:homeworkType
    BoxLayout:
        cols: 1
        id: typeOfHomeworkLayout
        orientation: "vertical"

        Label:
            text: "Choose the homework type(essay/open ended)"
            font_size: 24

        TextInput:
            id: homeworkType
            multiline: False

        Button:
            text: "Submit"
            font_size: 24
            on_press: root.submit()


<EssayHomeworkWindow>
    name: "EssayHomeworkWindow"
    numOfWords:numOfWords
    typeOfText:typeOfText
    BoxLayout:
        cols: 1
        orientation: "vertical"

        Label:
            text: "Number of words"

        TextInput:
            id: numOfWords

        Label:
            text: "What type of essay is it(fictional/research)"

        TextInput:
            id: typeOfText

        Button:
            text: "Submit"
            font_size: 24
            on_press: root.submit()

<OpenEndedHomeworkWindow>
    name: "OpenEndedHomeworkWindow"
    numOfQuestions:numOfQuestions

    BoxLayout:
        cols: 1
        orientation: "vertical"

        Label:
            text: "How many questions are there"

        TextInput:
            id: numOfQuestions

        Button:
            text: "Submit"
            on_press: root.submit()


<ScheduleWindow>
    name: "ScheduleWindow"
    scheduleGenerator:scheduleGenerator

    BoxLayout:
        cols: 1
        id: scheduleWindow
        orientation: "vertical"

        Button:
            text: "Generate Schedule"
            id: scheduleGenerator
            size_hint: (1, .3)
            on_press: root.generateSchedule()

        GridLayout:
            cols: 3
            id: scheduleList

            Label:
                text: "Time"

            Label:
                text: "Instruction"

            Label:
                text: "Start to do"











